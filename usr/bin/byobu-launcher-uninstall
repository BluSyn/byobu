PKG="byobu"
[ -r "$HOME/.byoburc" ] && . "$HOME/.byoburc"
[ -z "${BYOBU_PREFIX}" ] && export BYOBU_PREFIX="/usr" || export BYOBU_PREFIX
. "${BYOBU_PREFIX}/lib/${PKG}/include/common"

remove_launcher() {
	dest=$1
	if [ -w "$dest" ]; then
		# keep any comments, and remove lines invoking byobu:
		$SED -i -e '/^\s*#/n' -e "/\b$PKG-launch\$/d" -e "/ screen-launch/d" "$dest"
	fi
}

if [ -f "$1" ]; then
		remove_launcher "$1"
else
	for i in ".profile" ".bashrc" ".bash_profile" ".bash_login" ".zprofile"; do
		remove_launcher "$HOME/$i"
	done
fi

mkdir -p "$BYOBU_CONFIG_DIR"
touch "$BYOBU_CONFIG_DIR/disable-autolaunch"
# install disabled motd printing; re-enable
rm -f "$HOME"/.hushlogin

# vi: syntax=sh ts=4 noexpandtab
