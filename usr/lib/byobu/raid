__raid_detail() {
	[ -r /proc/mdstat ] && cat /proc/mdstat || true
}

__raid() {
	while read line; do
		local p msg
		# Errors in your raid
		case "$line" in
			*\ blocks\ *\[*_*\]$)
				[ -z "${msg}" ] && msg="RAID";;
			*%*)
				p="${line%%\%*}${PCT}"; p=${p##* };
				[ -z "$msg" ] && msg="RAID"
				msg="$msg,$p";;
		esac
	done < /proc/mdstat
	[ -n "$msg" ] || return
	color B w r; printf "%s" "$msg"; color --
}

# vi: syntax=sh ts=4 noexpandtab
