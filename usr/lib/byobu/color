__color_detail() {
	true
}

__color() {
	[ -z "$FOREGROUND" ] && FOREGROUND="w"
	[ -z "$BACKGROUND" ] && BACKGROUND="k"
	case "$BYOBU_BACKEND" in
		tmux)
			true
		;;
		screen)
			printf "\005{= $BACKGROUND$FOREGROUND}"
		;;
	esac
}

# vi: syntax=sh ts=4 noexpandtab
