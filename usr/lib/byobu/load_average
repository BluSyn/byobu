__load_average_detail() {
	cat /proc/loadavg
}

__load_average() {
	read one five fifteen other < /proc/loadavg
	[ -n "$one" ] || return
	color Y k; printf "$one"; color --
}

# vi: syntax=sh ts=4 noexpandtab
